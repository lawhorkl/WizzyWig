package-as: WizzyWig

# Automatically embed external libraries
externals:
  Libs/LibStub:
    url: https://repos.wowace.com/wow/libstub/trunk
    tag: latest
  Libs/CallbackHandler-1.0:
    url: https://repos.wowace.com/wow/callbackhandler/trunk/CallbackHandler-1.0
    tag: latest
  Libs/AceAddon-3.0:
    url: https://repos.wowace.com/wow/ace3/trunk/AceAddon-3.0
    tag: latest
  Libs/AceGUI-3.0:
    url: https://repos.wowace.com/wow/ace3/trunk/AceGUI-3.0
    tag: latest
  Libs/AceConfig-3.0:
    url: https://repos.wowace.com/wow/ace3/trunk/AceConfig-3.0
    tag: latest
  Libs/AceConsole-3.0:
    url: https://repos.wowace.com/wow/ace3/trunk/AceConsole-3.0
    tag: latest
  Libs/AceEvent-3.0:
    url: https://repos.wowace.com/wow/ace3/trunk/AceEvent-3.0
    tag: latest
  Libs/AceDB-3.0:
    url: https://repos.wowace.com/wow/ace3/trunk/AceDB-3.0
    tag: latest
  Libs/LibDataBroker-1.1:
    url: https://repos.wowace.com/wow/libdatabroker-1-1
    tag: latest
  Libs/LibDBIcon-1.0:
    url: https://repos.wowace.com/wow/libdbicon-1-0/trunk/LibDBIcon-1.0
    tag: latest

# Files and directories to ignore when packaging
ignore:
  - README.md
  - LICENSE
  - .git
  - .github
  - .gitignore
  - .pkgmeta
  - .vscode
  - .release
  - release.sh
  - types.lua
  - "*.zip"

# Enable changelog generation from git commits
enable-nolib-creation: no

# Optional: Manual changelog file (comment out if using git commit messages)
# manual-changelog: CHANGELOG.md
